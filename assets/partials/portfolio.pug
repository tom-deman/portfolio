include ./mixin

section(
    id='portfolio'
    class='w-full md:pb-32 pb-24'
)
    +subtitle( 'Portfolio' )
    div(
        class='mt-24'
        x-data='{ count: 0 }'
    )
        div( class='w-5/6 m-auto flex flex-wrap' )
            each imgTab, index in imgTabs
                div( class='md:w-1/3 w-full relative' )
                    a(
                        href=imgTab.href
                        target='_blank'
                    )
                        include ./images
                        p( class='absolute text-gray-100 text-lg text-medium opacity-0 pointer-events-none' )= imgTab.name
