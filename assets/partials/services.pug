- 
    const servicesTabs = [
        {
            icon: 'fas fa-pencil-alt',
            title: 'Web Design',
            text: 'Building modern web design for your site or web Application.'
        },
        {
            icon: 'fas fa-globe',
            title: 'Web Development',
            text: 'Coding your site properly with the right technology.'
        },
        {
            icon: 'fas fa-camera',
            title: 'Photoshoot',
            text: 'Graduated from High school in Photography, I can take professional pictures for your projects.'
        }
    ]


include ./mixin

section( id='services' )
    +subtitle( 'What I Do' )
    .my-container
        div( class='flex flex-wrap md:flex-wrap lg:flex-nowrap md:my-32 my-16 w-full justify-between' )
            each servicesTab, index in servicesTabs
                div(
                    class='flex flex-col justify-center py-12 lg:w-1/3 w-full border border-gray-200 rounded md:mx-6 md:mb-0 mb-16 text-center relative bottom-0'
                    class='services-animation'
                    key = index
                )
                    i(
                        class = servicesTab.icon
                        class='text-3xl'
                    )
                    h3( class='text-xl mt-4' )= servicesTab.title
                    p( class='font-thin mt-6 px-10' )= servicesTab.text
